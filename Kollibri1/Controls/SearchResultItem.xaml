<UserControl x:Class="Nokk.Controls.SearchResultItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" Height="50" Width="Auto">
    <DockPanel>
        <Image DockPanel.Dock="Left" Height="50" Width="50" Stretch="Fill" Name="Icon" Source="{Binding Path=image}" RenderOptions.BitmapScalingMode="Fant"/>
        <TextBlock DockPanel.Dock="Top"  FontSize="20 px" Height="Auto" TextTrimming="CharacterEllipsis" Name="Header" Text="{Binding Path=header}"/>
        <TextBlock DockPanel.Dock="Bottom" FontSize="14 px" Height="Auto" TextTrimming="CharacterEllipsis" Name="Description" Text="{Binding Path=description}"/>
    </DockPanel>
</UserControl>
